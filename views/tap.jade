extends layout

block content
  include nav.jade
  div.container
    div.row
      div.col-md-6
        h1= tap.name
        h2 List of Beers on Tap
        ul.list-group
          if beers
            for beer in beers
              li.list-group-item
                a(href='/breweries/' + beer.breweryId + '/beers/' + beer._id) #{beer.name}